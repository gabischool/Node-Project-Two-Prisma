// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./bookstore.db"
}

model Bookstore {
  id Int @id @default(autoincrement())
  name String
  location String
  created DateTime @default(now())
  updated DateTime @default(now())

  book Book[]
}

model Author {
  id Int @id @default(autoincrement())
  name String
  created DateTime @default(now())
  updated DateTime @default(now())

  book Book[]
}
